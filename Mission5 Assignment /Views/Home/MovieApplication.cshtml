@{
    ViewData["Title"] = "Movie Application";
}

@model Movie.Models.ApplicationResponse

<h1>Fill Out Movie Information</h1>

<div>
    <form method="post">
        <label asp-for="CategoryID" >Category:</label>

        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category m in ViewBag.Categories)
            {
                <option value="@m.CategoryID">@m.CategoryName</option>
          
            }

        </select>
        <br />
        <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director"  /><br /><br />

        <label asp-for="Rating" >Rating:</label>
        <select asp-for="Rating">
            <option value="          ">           </option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>

        </select>
        <br />
        <br />

        <label asp-for="Edited">Edited:</label>
        <input asp-for="Edited" /><br /><br />

        <label asp-for="LentTo">LentTo:</label>
        <input asp-for="LentTo" /><br /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes"/><br /><br />

        <button type="submit">Submit Information</button>
        <div asp-validation-summary="All">
            
        </div>
    </form>
</div>